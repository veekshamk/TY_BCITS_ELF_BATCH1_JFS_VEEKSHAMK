		if(empId>1) {
		return false;
	}
		return dao.deleteEmployee(empId);
	}

	@Override
	public boolean updateEmployee(EmployeeInfoBean bean) {
		return false;
	}


	@Override
	public List<EmployeeInfoBean> getAllEmployees() {
		return null;
	}

	

	

	

	@Override
